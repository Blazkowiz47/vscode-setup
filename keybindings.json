[
  // Place your key bindings in this file to override the defaults
  {
    "command": "toggleVim",
    "key": "ctrl-alt-v"
  },
  // Navigation key-bindings
  {
    "command": "workbench.action.navigateDown",
    "key": "alt-j"
  },
  {
    "command": "workbench.action.navigateUp",
    "key": "alt-k"
  },
  {
    "command": "workbench.action.navigateLeft",
    "key": "alt-h"
  },
  {
    "command": "workbench.action.navigateRight",
    "key": "alt-l"
  },
  {
    "command": "workbench.action.showAllEditorsByMostRecentlyUsed",
    "key": "space p b",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.action.quickOpen",
    "key": "space p f",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "args": {
      "commands": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    "command": "runCommands",
    "key": "space p v",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.action.nextEditorInGroup",
    "key": "tab",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.action.previousEditorInGroup",
    "key": "shift-tab",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.action.findInFiles",
    "key": "space p s",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.view.scm",
    "key": "space g g",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "cursorTop",
    "key": "g g",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  // Coding key-bindings
  {
    "command": "editor.action.moveLinesDownAction",
    "key": "shift-j",
    "when": "vim.mode != 'Insert' && vim.mode != 'Normal' && editorTextFocus"
  },
  {
    "command": "editor.action.moveLinesUpAction",
    "key": "shift-k",
    "when": "vim.mode != 'Insert' && vim.mode != 'Normal' && editorTextFocus"
  },
  {
    "command": "editor.action.showHover",
    "key": "shift-k",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "editor.action.codeAction",
    "key": "space v c a",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "editor.action.rename",
    "key": "space r n",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "workbench.action.gotoSymbol",
    "key": "space c s",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "editor.action.revealDefinition",
    "key": "g d",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "editor.action.goToReferences",
    "key": "g r",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  // File explorer movement
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.copy",
    "key": "y",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.paste",
    "key": "p",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.cut",
    "key": "x",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "explorer.newFile",
    "key": "shift-5",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "explorer.newFolder",
    "key": "d",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "python.execInTerminal",
    "key": "space r p y",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && editorFocus && editorLangId == python"
  },
  {
    "args": {
      "commands": [
        "ruff.executeAutofix",
        "ruff.executeOrganizeImports",
        "ruff.executeAutofix"
      ]
    },
    "command": "runCommands",
    "key": "space f",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && editorFocus"
  },
  {
    "command": "editor.action.formatDocument",
    "key": "space f",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal' && editorFocus && editorLangId != python"
  },
  // Cursor ai commmands:
  {
    "command": "workbench.action.toggleAuxiliaryBar",
    "key": "space a a",
    "when": "!terminalFocus && !terminalFocus && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+y",
    "command": "editor.action.acceptCursorTabSuggestion",
    "when": "vim.mode == 'Normal' && cpp.shouldAcceptTab"
  },
  {
    "key": "ctrl+y",
    "command": "editor.action.acceptCursorTabSuggestion",
    "when": "cpp.shouldAcceptTab"
  },
  {
    "key": "ctrl+y",
    "command": "editor.action.inlineSuggest.commit",
    "when": "(inlineEditIsVisible && tabShouldAcceptInlineEdit && !editorHoverFocused && !editorTabMovesFocus && !suggestWidgetVisible || inlineSuggestionHasIndentationLessThanTabSize && inlineSuggestionVisible && !editorHoverFocused && !editorTabMovesFocus && !suggestWidgetVisible || inlineEditIsVisible && inlineSuggestionHasIndentationLessThanTabSize && inlineSuggestionVisible && !editorHoverFocused && !editorTabMovesFocus && !suggestWidgetVisible || inlineEditIsVisible && inlineSuggestionVisible && tabShouldAcceptInlineEdit && !editorHoverFocused && !editorTabMovesFocus && !suggestWidgetVisible)"
  },
  // Accept suggestions when cursor is visible - Ctrl+Y as primary
  {
    "key": "ctrl+y",
    "command": "editor.action.acceptCursorTabSuggestion",
    "when": "suggestWidgetVisible && editorTextFocus"
  },
  {
    "key": "ctrl+y",
    "command": "editor.action.inlineSuggest.commit",
    "when": "inlineSuggestionVisible && editorTextFocus"
  },
  // Disable Tab from accepting suggestions (allow only for indentation)
  {
    "key": "tab",
    "command": "-editor.action.acceptCursorTabSuggestion"
  },
  {
    "key": "tab",
    "command": "-editor.action.inlineSuggest.commit"
  },
  // Terminal
  {
    "command": "terminal.toggleVisibility",
    "key": "ctrl-`",
    "when": "vim.model == 'Normal' && terminalProcessSupported"
  }
]
